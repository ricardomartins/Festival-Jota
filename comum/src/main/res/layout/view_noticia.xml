<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/corpo_noticia"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:clickable="false" >

    <ImageView
        android:id="@+id/imagem"
        android:contentDescription="@string/noticia_imagem"
        android:src="@drawable/imagem_noticia"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_alignParentEnd="false" />

    <ImageView
        android:id="@+id/mascara"
        android:src="@drawable/mascara_imagem_noticia"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:layout_alignParentEnd="false"
        android:contentDescription="@string/noticia_imagem" />

    <TextView
        android:id="@+id/titulo"
        android:text="@string/noticia_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:textColor="#ffffffff" />

    <TextView
        android:id="@+id/texto"
        android:text="@string/noticia_texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffffff" />

</RelativeLayout>